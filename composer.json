{
    "name": "mineadmin/components",
    "description": "mineAdmin核心组件",
    "license": "Apache-2.0",
    "keywords": [
        "MineAdmin",
        "hyperf",
        "hyperf-admin",
        "Admin"
    ],
    "authors": [
        {
            "name": "xmo",
            "email": "root@imoi.cn",
            "role": "Developer"
        },
        {
            "name": "zds",
            "role": "Developer"
        }
    ],
    "homepage": "http://www.mineadmin.com",
    "require": {
        "hyperf/framework": "~3.1",
        "hyperf/view": "~3.1",
        "hyperf/swagger": "~3.1",
        "hyperf/di": "~3.1",
        "ext-zip": "*",
        "hyperf/translation": "~3.1.0",
        "nette/utils": "dev-master",
        "hyperf/guzzle": "~3.1",
        "hyperf/db-connection": "~3.1",
        "casbin/casbin": "^3.23",
        "hyperf/config": "~3.1",
        "hyperf/async-queue": "~3.1",
        "lcobucci/jwt": "~5.3.0",
        "hyperf/http-server": "~3.1",
        "hyperf/cache": "~3.1",
        "ext-fileinfo": "*",
        "hyperf/filesystem": "~3.1",
        "ramsey/uuid": "^4.7",
        "hyperf/logger": "~3.1"
    },
    "require-dev": {
        "doctrine/dbal": "^4.1",
        "fakerphp/faker": "^1.23",
        "friendsofphp/php-cs-fixer": "^3.0",
        "hyperf/devtool": "3.1.*",
        "hyperf/ide-helper": "3.1.*",
        "hyperf/testing": "3.1.*",
        "hyperf/watcher": "3.1.*",
        "mockery/mockery": "^1.0",
        "phpstan/phpstan": "^1.10",
        "swoole/ide-helper": "^5.0",
        "zircote/swagger-php": "4.10.6"
    },
    "replace": {
        "mineadmin/access": "*",
        "mineadmin/app-store": "*",
        "mineadmin/auth-jwt": "*",
        "mineadmin/casbin": "*",
        "mineadmin/core": "*",
        "mineadmin/generator-crud": "*",
        "mineadmin/jwt": "*",
        "mineadmin/swagger": "*",
        "mineadmin/upload": "*"
    },
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": {
            "Mine\\Access\\": "src/Access/./",
            "Mine\\AppStore\\": "src/AppStore/src/",
            "Mine\\Casbin\\": "src/Casbin/./",
            "Mine\\Core\\": "src/Core/./",
            "Mine\\GeneratorCrud\\": "src/GeneratorCrud/./",
            "Mine\\JwtAuth\\": "src/JwtAuth/./",
            "Mine\\Jwt\\": "src/Jwt/./",
            "Mine\\Swagger\\": "src/Swagger/./",
            "Mine\\Upload\\": "src/Upload/./"
        },
        "files": []
    },
    "autoload-dev": {
        "psr-4": {
            "Mine\\Tests\\": "tests/"
        },
        "files": []
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "pestphp/pest-plugin": true
        },
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "analyse": "phpstan analyse --memory-limit 1000M -l 0 -c phpstan.neon ./src",
        "coverage": "pest --coverage --coverage-clover tests/coverage.xml",
        "cs-fix": "php-cs-fixer fix $1",
        "json-fix": [
            "@composer normalize --no-update-lock",
            "find ./src -name composer.json -exec composer normalize --no-update-lock {} \\;"
        ],
        "test": "pest"
    },
    "extra": {
        "hyperf": {
            "config": [
                "Mine\\Access\\ConfigProvider",
                "Mine\\AppStore\\ConfigProvider",
                "Mine\\JwtAuth\\ConfigProvider",
                "Mine\\Swagger\\ConfigProvider"
            ]
        }
    }
}
